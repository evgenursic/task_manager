generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

enum Priority {
  LOW
  MEDIUM
  HIGH
}

enum Status {
  OPEN
  DONE
}

model Task {
  id        String   @id @default(cuid())
  title     String
  notes     String?
  dueAt     DateTime?
  priority  Priority @default(MEDIUM)
  status    Status   @default(OPEN)
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([dueAt])
  @@index([status])
  @@index([priority])
}
